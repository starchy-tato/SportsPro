@model SportsPro.Models.Product

@{
    ViewData["Title"] = ViewBag.Action; //Edit or Create depending on the method called
}

<h1>@ViewBag.Action Product</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="ProductID" />
            <div class="form-group pb-3">
                <label asp-for="ProductCode" class="control-label">Code</label>
                <input asp-for="ProductCode" class="form-control" />
                @*<span asp-validation-for="ProductCode" class="text-danger"></span>*@
            </div>
            <div class="form-group pb-3">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                @*<span asp-validation-for="Name" class="text-danger"></span>*@
            </div>
            <div class="form-group pb-3">
                <label asp-for="YearlyPrice" class="control-label">Yearly Price</label>
                <input asp-for="YearlyPrice" class="form-control" />
                @*<span asp-validation-for="YearlyPrice" class="text-danger"></span>*@
            </div>
            <div class="form-group pb-3">
                <label asp-for="ReleaseDate" class="control-label">Release Date</label>
                <input asp-for="ReleaseDate" class="form-control" />
                @*<span asp-validation-for="ReleaseDate" class="text-danger"></span>*@
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" /> |
                <a asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>

