@model SportsPro.Models.IncidentVM

@{
    ViewData["Title"] = ViewBag.Action; //Edit or Create depending on the method called
    string Active(string filter, string selected)
    {
        return (filter.ToLower() == selected.ToLower()) ? "active" : "";
    }
}

<h1>@ViewBag.Action Incident</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="IncidentID" />
            <div class="form-group pb-3">
                <label asp-for="FullName" class="control-label">Customer</label>
                <select asp-for="FullName" class="form-control" asp-items="ViewBag.FullName">
                    <option value="">Select a Customer</option>
                    @foreach (Customer c in ViewBag.Customers)
                    {
                        <option value="@c.CustomerID">@c.FullName</option>
                    }
                </select>
                @*<span asp-validation-for="CustomerID" class="text-danger"></span>*@
            </div>
            <div class="form-group pb-3">
                <label asp-for="Name" class="control-label">Product</label>
                <select asp-for="Name" class="form-control" asp-items="ViewBag.Name">
                    <option value="">Select a Product</option>
                    @foreach (Product p in ViewBag.Products)
                    {
                        <option value="@p.ProductID">@p.Name</option>
                    }
                </select>
                @*<span asp-validation-for="ProductID" class="text-danger"></span>*@
            </div>
            <div class="form-group pb-3">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                @*<span asp-validation-for="Title" class="text-danger"></span>*@
            </div>
            <div class="form-group pb-3">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                @*<span asp-validation-for="Description" class="text-danger"></span>*@
            </div>
            <div class="form-group pb-3">
                <label asp-for="TechnicianID" class="control-label">Technician</label>
                <select asp-for="TechnicianID" class="form-control" asp-items="ViewBag.TechnicianID">
                    <option value="">Select a Technician</option>
                    @foreach (Technician t in ViewBag.Technicians)
                    {
                        <option value="@t.TechnicianID">@t.Name</option>
                    }
                </select>
                @*<span asp-validation-for="TechnicianID" class="text-danger"></span>*@
            </div>
            <div class="form-group pb-3">
                <label asp-for="DateOpened" class="control-label">Date Opened</label>
                <input asp-for="DateOpened" class="form-control" />
                @*<span asp-validation-for="DateOpened" class="text-danger"></span>*@
            </div>
            <div class="form-group pb-3">
                <label asp-for="DateClosed" class="control-label">Date Closed</label>
                <input asp-for="DateClosed" class="form-control" />
                @*<span asp-validation-for="DateClosed" class="text-danger"></span>*@
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-outline-success"  /> |
                <a asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>

@*<div>
        <a asp-action="Index">Back to List</a>
    </div>*@

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
